{
  "name": "friend-launcher",
  "private": true,
  "version": "0.0.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "b4a": "^1.7.3",
    "clsx": "^2.1.1",
    "electron-updater": "^6.7.3",
    "hyperswarm": "^4.16.0",
    "minecraft-launcher-core": "^3.18.2",
    "msmc": "^5.0.5",
    "p-limit": "^7.2.0",
    "pump": "^3.0.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sqlite-electron": "^3.3.5",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.10",
    "@types/pump": "^1.1.3",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.32.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.friendlauncher.app",
    "productName": "FriendLauncher",
    "copyright": "Copyright Â© 2026",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/tray-icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "malyarq",
        "repo": "fmcl"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "extraResources": [
      "authlib-injector.jar"
    ]
  }
}
